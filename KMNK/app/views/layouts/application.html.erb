<!DOCTYPE html>
<html>
<head>
  <title>KMNK</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="http://localhost:8080/webpage/homepage/">WeatherTech Cafe</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="http://localhost:8080/webpage/homepage/index.html">Home
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:8080/webpage/homepage/about.html">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:8080/webpage/homepage/contact.html">Contact</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/non_item/cart">Cart</a>
            </li>
	    <li class="nav-item">
              <a class="nav-link" href="http://192.168.154.128:3000/item_pages/calzone">Menu</a>
            </li>
	    <li class="nav-item">
              <div id="user_header">
 		<% if current_user %>
		Logged in as <%= current_user.email %>.
		 <%= link_to "Log Out", logout_path %>
		 <% else %>
		 <%= link_to "Sign Up", signup_path %> or
		 <%= link_to "Log In", login_path %>
		 <% end %>
		</div>
		<% flash.each do |key, value| %>
		 <%= content_tag(:div, class: "alert alert-#{key}") do %>
		<p><%= value %></p>
		 <% end %>
		<% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
<%= yield %>
<!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; KMNK Online Food Ordering 2017</p>
      </div>
      <!-- /.container -->
    </footer>
</body>
</html>
